@{
    ViewBag.Title = "LienHe";
}

<!-- Thanh tiêu đề LIÊN HỆ với đường ngang bên trái và bên phải -->
<div class="flex items-center">
    <!-- Thanh ngang bên trái -->
    <div class="flex-1 h-1 bg-[#ce3235]"></div>
    <!-- Khối chữ hiển thị tiêu đề -->
    <span class="bg-[#ce3235] text-white px-4 py-2 font-bold uppercase tracking-widest text-lg mx-4">
        LIÊN HỆ
    </span>
    <!-- Thanh ngang bên phải -->
    <div class="flex-1 h-1 bg-[#ce3235]"></div>
</div>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <!-- Registration Section (Đăng ký tư vấn miễn phí) -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-12">
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">ĐĂNG KÝ TƯ VẤN MIỄN PHÍ</h2>
            <p class="text-gray-600 mb-6">Hãy để lại thông tin để được<br> FIVESTARS liên hệ tư vấn miễn phí nhé!</p>
            <div class="space-y-2">
                <p class="text-gray-600">Hoặc gọi hotline</p>
                <a href="tel:0931900255" class="text-2xl font-bold text-[#ce3235] hover:text-[#b2262a]">
                    0931 900 255
                </a>
            </div>
        </div>

        <!-- Form đăng ký -->
        <div class="space-y-6">
            <!-- Họ và tên -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Họ và tên</label>
                <input type="text"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ce3235] focus:border-transparent">
            </div>

            <!-- Email -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Email</label>
                <input type="email"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ce3235] focus:border-transparent">
            </div>

            <!-- Số điện thoại -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Số điện thoại</label>
                <input type="tel"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ce3235] focus:border-transparent">
            </div>

            <!-- Chọn Khóa Học -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Chọn Khóa Học</label>
                <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ce3235] focus:border-transparent">
                    <option value="">-- Vui lòng chọn --</option>
                    <option>TOEIC</option>
                    <option>IELTS</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button class="w-full bg-[#ce3235] hover:bg-[#b2262a] text-white font-bold py-4 px-6 rounded-lg transition-all duration-300 transform">
                ĐĂNG KÝ NGAY
            </button>
        </div>
    </div>
</div>

