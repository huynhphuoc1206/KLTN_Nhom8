                <a href='@Url.Action("KhoaHoc","KhoaHoc")' class="inline-block bg-[#ce3235] text-white px-8 py-4 rounded-full text-lg font-medium hover:bg-red-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
                    Khám Phá Các Khóa Học
                </a>
            </div>
        </div>
    </section>

    <!-- About Section with red icons -->
