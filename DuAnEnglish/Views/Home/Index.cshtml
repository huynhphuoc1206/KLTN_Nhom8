                                <div class="text-red-600 font-bold text-4xl mb-2">5 NĂM</div>
                                <div class="text-gray-600">Tận tâm đào tạo</div>
                            </div>
                        </div>
                        <div class="border-l-2 border-red-600 h-12 hidden md:block"></div>

                        <!-- Item 2 -->
                        <div class="col-span-1 flex items-center justify-center gap-4">
                            <div class="text-center">
                                <div class="text-red-600 font-bold text-4xl mb-2">100%</div>
                                <div class="text-gray-600">Giảng viên chất lượng</div>
                            </div>
                        </div>
                        <div class="border-l-2 border-red-600 h-12 hidden md:block"></div>

                        <!-- Item 3 -->
                        <div class="col-span-1 flex items-center justify-center">
                            <div class="text-center">
                                <div class="text-red-600 font-bold text-4xl mb-2">100%</div>
                                <div class="text-gray-600">Học viên hài lòng</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section with red icons -->
