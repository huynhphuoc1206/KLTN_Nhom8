@{
    ViewBag.Title = "TuyenDung";
}

<!-- Tiêu đề TUYỂN DỤNG với đường ngang bên trái và bên phải -->
<div class="flex items-center">
    <!-- Thanh ngang bên trái -->
    <div class="flex-1 h-1 bg-[#ce3235]"></div>

    <!-- Khối chữ hiển thị tiêu đề -->
    <span class="bg-[#ce3235] text-white px-4 py-2 font-bold uppercase tracking-widest text-lg mx-4">
        TUYỂN DỤNG
    </span>

    <!-- Thanh ngang bên phải -->
    <div class="flex-1 h-1 bg-[#ce3235]"></div>
</div>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Recruitment Section -->
    <div class="space-y-8">
        <!-- Nhân viên Section -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex">
            <!-- Container ảnh với border phân cách -->
            <div class="w-1/3 flex-shrink-0 border-r">
                <img src="https://thumbs.dreamstime.com/b/red-cartoon-linear-hiring-logo-red-cartoon-linear-hiring-logo-flat-logotype-template-graphic-art-design-isolated-112044433.jpg"
                     class="w-full h-full object-contain p-4"
                     alt="Hình ảnh tuyển dụng nhân viên">
            </div>

            <!-- Container nội dung -->
            <div class="flex-1 p-6">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Nhân viên</h2>
                    <span class="text-sm text-gray-500">Posted on Tháng Bảy 26 2024</span>
                </div>

                <!-- Table Header -->
                <div class="grid grid-cols-4 gap-4 bg-gray-50 p-3 rounded-t-lg border-b">
                    <div class="font-medium">CHỨC VỤ</div>
                    <div class="font-medium">KHU VỰC</div>
                    <div class="font-medium">SỐ LƯỢNG</div>
                    <div class="font-medium">NGÀY HẾT HẠN</div>
                </div>

                <!-- Table Row -->
                <div class="grid grid-cols-4 gap-4 p-3 border-b">
                    <div>COUNSELLOR INTERN</div>
                    <div>Hà Nội</div>
                    <div>1</div>
                    <div>17/12/2022</div>
                </div>
            </div>
        </div>

        <!-- Giáo viên Section -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex mt-8">
            <!-- Container ảnh với border phân cách -->
            <div class="w-1/3 flex-shrink-0 border-r">
                <img src="https://thumbs.dreamstime.com/b/red-cartoon-linear-hiring-logo-red-cartoon-linear-hiring-logo-flat-logotype-template-graphic-art-design-isolated-112044433.jpg"
                     class="w-full h-full object-contain p-4"
                     alt="Hình ảnh tuyển dụng giáo viên">
            </div>

            <!-- Container nội dung -->
            <div class="flex-1 p-6">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Giáo viên</h2>
                    <span class="text-sm text-gray-500">Posted on Tháng Bảy 26 2024</span>
                </div>

                <!-- Table Header -->
                <div class="grid grid-cols-5 gap-4 bg-gray-50 p-3 rounded-t-lg border-b">
                    <div class="font-medium">CHỨC VỤ</div>
                    <div class="font-medium">KHU VỰC</div>
                    <div class="font-medium">SỐ LƯỢNG</div>
                    <div class="font-medium">NGÀY HẾT HẠN</div>
                    <div class="font-medium">CHI TIẾT ỨNG TUYỂN</div>
                </div>

                <!-- Table Row -->
                <div class="grid grid-cols-5 gap-4 p-3 border-b">
                    <div>Giáo viên</div>
                    <div>Hà Nội</div>
                    <div>2</div>
                    <div>31/12/2024</div>
                    <div>
                        <a href="#" class="text-[#ce3235] hover:text-[#b2262a] font-medium">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
