@{
    ViewBag.Title = "_LayoutHocVien";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="bg-gray-50">

    <!-- Navbar -->
    <header class="bg-[#ce3235] shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-2">
                <h2 class="text-3xl font-bold tracking-wide text-white">FIVESTARS</h2>
            </a>

            <!-- Navigation -->
            <nav class="hidden md:flex space-x-6 text-sm font-medium">
                <a href="@Url.Action("KhoaHoc", "KhoaHoc")" class="text-white hover:text-gray-200">KHÓA HỌC</a>
                <a href="@Url.Action("ThongTin", "HocVien")" class="text-white hover:text-gray-200">THÔNG TIN</a>
                <a href="@Url.Action("ThanhToan", "HocVien")" class="text-white hover:text-gray-200">THANH TOÁN</a>
                <a href="@Url.Action("LichHoc", "HocVien")" class="text-white hover:text-gray-200">LỊCH HỌC</a>
                <a href="@Url.Action("Diem", "HocVien")" class="text-white hover:text-gray-200">ĐIỂM</a>
            </nav>

            <!-- Buttons -->
            <a href="@Url.Action("DangXuat", "DangNhap")" class="bg-white hover:bg-red-700 text-red-500 px-4 py-2 rounded-md transition-colors">
                Đăng Xuất
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="pt-20 min-h-screen">
        <div class="container mx-auto px-4 py-8">
            @RenderBody()
        </div>
        <div class="relative h-[calc(100vh-4rem)] md:h-screen w-full overflow-hidden">
            <div class="absolute inset-0 bg-[url('https://img.freepik.com/free-vector/hand-drawn-english-lessons-youtube-channel-art-template_23-2149293394.jpg')] bg-cover bg-center bg-no-repeat transition-all duration-500 hover:scale-105">
                <!-- Overlay có thể tùy chỉnh -->
                <div class="absolute inset-0 bg-black/20 backdrop-blur-sm"></div>
            </div>

            <!-- Nội dung banner (tùy chọn) -->
            <div class="relative z-10 flex h-full items-center justify-center text-center px-4">
                <div class="max-w-4xl space-y-6 text-white">
                    <h1 class="text-4xl md:text-6xl font-bold drop-shadow-lg">Học Tiếng Anh Hiệu Quả</h1>
                    <p class="text-lg md:text-xl font-medium opacity-90">Khám phá phương pháp học tập đột phá</p>
                    <button class="mt-6 px-8 py-3 bg-red-600 hover:bg-red-700 rounded-lg text-lg font-semibold transition-all duration-300 transform hover:scale-105">
                        Bắt đầu ngay
                    </button>
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>