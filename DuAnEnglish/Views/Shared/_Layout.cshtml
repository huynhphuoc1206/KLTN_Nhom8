<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet"
          href="https://unpkg.com/aos@next/dist/aos.css" />
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            -webkit-font-smoothing: antialiased;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Navbar -->
    <header class="bg-[#ce3235] shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-2">
                <h2 class="text-3xl font-bold tracking-wide text-white">FIVESTARS</h2>
            </a>

            <!-- Navigation -->
            <nav class="hidden md:flex space-x-6 text-sm font-medium">
                <a href="@Url.Action("Index", "Home")" class="text-white hover:text-gray-200">TRANG CHỦ</a>
                <a href="@Url.Action("KhoaHoc", "KhoaHoc")" class="text-white hover:text-gray-200">KHÓA HỌC</a>
                <a href="@Url.Action("ChiaSe", "Home")" class="text-white hover:text-gray-200">CHIA SẺ</a>
                <a href="@Url.Action("SuKien", "Home")" class="text-white hover:text-gray-200">SỰ KIỆN</a>
                <a href="@Url.Action("LienHe", "Home")" class="text-white hover:text-gray-200">LIÊN HỆ</a>
                <a href="@Url.Action("TuyenDung", "Home")" class="text-white hover:text-gray-200">TUYỂN DỤNG</a>
            </nav>

            <!-- Buttons -->
            <div class="flex space-x-2">
                <a href="@Url.Action("DangNhap", "DangNhap")">
                    <button class="px-4 py-2 bg-white text-[#ce3235] rounded-lg hover:bg-gray-100 transition">
                        Đăng nhập
                    </button>
                </a>
                <a href="@Url.Action("DangKy", "DangKy")">
                    <button class="px-4 py-2 bg-white text-[#ce3235] rounded-lg hover:bg-gray-100 transition">
                        Đăng ký
                    </button>
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8 min-h-[calc(100vh-160px)]">
        @RenderBody()
    </main>

    <!-- Footer with updated contact info and original social media logos -->
    <footer class="bg-[#ce3235] text-white py-12">
        <div class="container mx-auto px-4">
            <div class=" md:grid-cols-3 flex justify-between ">
                <!-- Contact Info -->
                <div class="mb-8">
                    <h3 class="text-white text-xl font-bold mb-6">Trung Tâm Anh Ngữ</h3>
                    <ul class="space-y-3">
                        <li class="flex items-center">
                            <i class="fas fa-map-marker-alt mr-3 text-white"></i>
                            123 Đường Trần Hưng Đạo, TX.Điện Bàn, Tỉnh Quảng Nam
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-phone mr-3 text-white"></i>
                            0123 456 789
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-envelope mr-3 text-white"></i>
                            lienhe@trungtamanhngufivestars.vn
                        </li>
                    </ul>
                </div>

                <!-- Quick Links -->
                <div class="mb-8">
                    <h3 class="text-white text-xl font-bold mb-6">Liên Kết Nhanh</h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="#" class="hover:text-red-200 transition-colors">
                                <i class="fas fa-chevron-right mr-2 text-sm"></i>
                                Trang Chủ
                            </a>
                        </li>
                        <!-- Add other links similarly -->
                    </ul>
                </div>

                <!-- Social Media -->
                <div class="mb-8">
                    <h3 class="text-white text-xl font-bold mb-6">Kết Nối Với Chúng Tôi</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center text-white hover:bg-blue-700 transition-colors">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="w-10 h-10 rounded-full bg-red-800 flex items-center justify-center text-white hover:bg-red-900 transition-colors">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="w-10 h-10 rounded-full bg-pink-600 flex items-center justify-center text-white hover:bg-pink-700 transition-colors">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,    // thời gian (ms)
            once: true        // chỉ chạy 1 lần
        });
    </script>
</body>
</html>
