@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Ký</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Nếu cần dùng SweetAlert2 để thông báo -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">

    @* Hiển thị thông báo lỗi nếu có *@
    @if (ViewBag.ThongBao != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@Html.Raw(ViewBag.ThongBao)',
                background: '#f8f9fa',
                confirmButtonColor: '#3b82f6',
                timer: 4000
            });
        </script>
    }

    <!-- Container chính chia đôi màn hình -->
    <div class="bg-white w-full max-w-6xl h-[90%] rounded-2xl overflow-hidden shadow-lg flex">

        <!-- Cột bên trái: Form đăng ký và lời giới thiệu -->
        <div class="w-full lg:w-1/2 flex flex-col p-8 md:p-12">

            <!-- Logo / tiêu đề và chọn ngôn ngữ (tuỳ chọn) -->
            <div class="flex items-center justify-between mb-6">
                <div class="text-xl font-bold text-green-600">
                    English
                </div>
            </div>

            <!-- Lời chào và giới thiệu -->
            <h1 class="text-2xl font-bold text-gray-800 mb-2">
                Vui lòng điền đầy đủ thông tin bên dưới để tạo tài khoản mới.
            </h1>

            <!-- Form đăng ký -->
            @using (Html.BeginForm("DangKy", "DangKy", FormMethod.Post))
            {
                <div class="space-y-4">
                    <!-- Tên đăng nhập -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Tên đăng nhập
                        </label>
                        <input type="text" name="TenDangNhap" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập tên đăng nhập" />
                    </div>

                    <!-- Mật khẩu -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Mật khẩu
                        </label>
                        <input type="password" name="MatKhau" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập mật khẩu" />
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Email
                        </label>
                        <input type="email" name="Email" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập địa chỉ email" />
                    </div>

                    <!-- Số điện thoại -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Số điện thoại
                        </label>
                        <input type="text" name="SDT" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập số điện thoại" />
                    </div>

                    <!-- Nút đăng ký -->
                    <button type="submit"
                            class="w-full bg-black text-white py-2 px-4 rounded-lg hover:bg-gray-800 transition duration-200">
                        Đăng Ký
                    </button>
                </div>
            }

            <!-- Liên kết quay lại hoặc chuyển sang đăng nhập -->
            <div class="mt-6 text-center space-y-2">
                <form action="@Url.Action("DangNhap", "DangNhap")" method="get">
                    <button type="submit" class="text-sm text-gray-500 underline hover:text-gray-700">
                        Đã có tài khoản? Đăng nhập ngay
                    </button>
                </form>
            </div>
        </div>

        <!-- Cột bên phải: Hình ảnh nền và overlay thông tin -->
        <div class="hidden lg:flex w-1/2 relative">
            <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c"
                 alt="Ảnh nền minh họa"
                 class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/40 flex items-center justify-center p-8">
                <div class="bg-white/80 backdrop-blur-sm rounded-lg p-6 max-w-sm text-center">
                    <h2 class="text-xl font-bold text-gray-800 mb-2">
                        ENGLISH CENTER
                    </h2>
                    <p class="text-gray-700 text-sm">
                        NHÓM 8
                    </p>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
