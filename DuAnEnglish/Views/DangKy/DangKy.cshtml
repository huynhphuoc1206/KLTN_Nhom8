﻿@{
    Layout = null;
}
@{
    ViewBag.Title = "DangKy";
}
<!DOCTYPE html>
<html lang="vi" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Ký</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- SweetAlert2 để thông báo -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
</head>
<body class="bg-[#F4FFF7] min-h-screen flex items-center justify-center">



    <!-- Container chính với giao diện responsive -->
    <div class="bg-white w-full max-w-6xl h-auto rounded-2xl overflow-hidden shadow-lg flex flex-col md:flex-row">
        <!-- Cột bên trái: Form đăng ký -->
        <div class="w-full md:w-1/2 p-8 flex flex-col justify-center">
            <div class="flex items-center justify-between mb-6">
                <div class="text-xl font-bold text-green-600">
                    English FiveStars
                </div>
            </div>
            <h1 class="text-2xl font-bold text-gray-800 mb-6">
                Vui lòng điền đầy đủ thông tin bên dưới để tạo tài khoản mới.
            </h1>

            <!-- Form đăng ký -->
            @using (Html.BeginForm("DangKy", "DangKy", FormMethod.Post))
            {
                <div class="space-y-4">
                    <!-- Tên đăng nhập -->
                    <div>
                        <label for="TenDangNhap" class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
                        <input type="text" id="TenDangNhap" name="TenDangNhap" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập tên đăng nhập" />
                    </div>

                    <!-- Mật khẩu -->
                    <div>
                        <label for="MatKhau" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                        <input type="password" id="MatKhau" name="MatKhau" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập mật khẩu" />
                    </div>

                    <!-- Nhập lại mật khẩu -->
                    <div>
                        <label for="NhapLaiMatKhau" class="block text-sm font-medium text-gray-700 mb-1">Nhập Lại Mật khẩu</label>
                        <input type="password" id="NhapLaiMatKhau" name="NhapLaiMatKhau" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Xác nhận mật khẩu" />
                    </div>

                    <!-- Họ và tên -->
                    <div>
                        <label for="HoTen" class="block text-sm font-medium text-gray-700 mb-1">Họ và Tên</label>
                        <input type="text" id="HoTen" name="HoTen" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập họ và tên" />
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" id="Email" name="Email" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập email" />
                    </div>

                    <!-- Số điện thoại -->
                    <div>
                        <label for="SDT" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                        <input type="text" id="SDT" name="SDT" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-200"
                               placeholder="Nhập số điện thoại" />
                    </div>

                    <!-- Nút đăng ký -->
                    <button type="submit"
                            class="w-full bg-black text-white py-2 px-4 rounded-lg hover:bg-gray-800 transition duration-200">
                        Đăng Ký
                    </button>
                </div>
            }

            <!-- Liên kết chuyển sang đăng nhập -->
            <div class="mt-6 text-center">
                <a href="@Url.Action("DangNhap", "DangNhap")" class="text-sm text-gray-500 underline hover:text-gray-700">
                    Đã có tài khoản? Đăng nhập ngay
                </a>
            </div>
        </div>

        <!-- Cột bên phải: Hình nền minh họa với overlay thông tin -->
        <div class="hidden md:flex md:w-1/2 relative">
            <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c" alt="Ảnh nền minh họa"
                 class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/40 flex items-center justify-center p-8">
                <div class="bg-white/80 backdrop-blur-sm rounded-lg p-6 text-center">
                    <h2 class="text-xl font-bold text-gray-800 mb-2">FIVESTARS</h2>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Scripts/JSThongBao.js"></script>
    @if (ViewBag.ThongBao != null)
    {
        <script>
            // Gọi hàm showAlert từ file JSThongBao.js
            showAlert('@Html.Raw(ViewBag.ThongBao)');
        </script>
    }
</body>
</html>