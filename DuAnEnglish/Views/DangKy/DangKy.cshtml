@{ Layout = null; }
@{ ViewBag.Title = "DangKy"; }
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>Đăng Ký</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Đăng Ký</h2>
        <form action="@Url.Action("DangKy", "DangKy")" method="post">
            <label for="TenDangNhap"><i class="fa fa-user"></i> Tên đăng nhập</label>
            <input type="text" id="TenDangNhap" name="TenDangNhap" required />

            <label for="MatKhau"><i class="fa fa-lock"></i> Mật khẩu</label>
            <input type="password" id="MatKhau" name="MatKhau" required />

            <label for="NhapLaiMatKhau"><i class="fa fa-lock"></i> Nhập Lại Mật khẩu</label>
            <input type="password" id="NhapLaiMatKhau" name="NhapLaiMatKhau" required />

            <label for="HoTen"><i class="fa fa-user"></i> Họ và Tên</label>
            <input type="text" id="HoTen" name="HoTen" required />

            <label for="Email"><i class="fa fa-envelope"></i> Email</label>
            <input type="email" id="Email" name="Email" required />

            <label for="SDT"><i class="fa fa-phone"></i> Số điện thoại</label>
            <input type="text" id="SDT" name="SDT" required />

            <button type="submit" class="btn btn-primary">Đăng Ký</button>
        </form>
        <button onclick="window.location.href='@Url.Action("DangNhap", "DangNhap")'" class="btn-secondary">Quay về</button>
    </div>
    <script src="~/Scripts/JSThongBao.js"></script>
    @if (ViewBag.ThongBao != null)
    {
        <script>
            // Gọi hàm showAlert từ file JSThongBao.js
            showAlert('@Html.Raw(ViewBag.ThongBao)');
        </script>
}
</body>
</html>